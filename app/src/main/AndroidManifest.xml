<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.mikasa.gnote">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".NoteApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_bili"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bili"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.NoteListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NoteAddActivity" />
        <activity android:name=".activity.NoteEditActivity" />
        <activity android:name=".activity.CategoryAddActivity" />
        <activity android:name=".activity.CategoryEditActivity"></activity>
        <activity android:name=".activity.CategoryManagerActivity">
        </activity>
    </application>

</manifest>